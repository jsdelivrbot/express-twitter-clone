<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form"> 
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Name your tweet here" required>
    </div>

    <div class="form-group">
        <label for="body">Tweet Text</label>
        <textarea class="form-control" id="body" name="body" placeholder="Enter your tweet here" rows="2" required></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Post entry" class = "btn btn-primary">
    </div>
</form>

<% include footer %>